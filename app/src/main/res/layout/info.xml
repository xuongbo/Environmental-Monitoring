<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clear_sky"
    app:behavior_hideable="true"
    app:behavior_peekHeight="30dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/location"
        android:layout_width="168dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/popup_curved"
        android:gravity="center"
        android:text="location"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/humid"
        android:layout_width="76dp"
        android:layout_height="34dp"
        android:layout_above="@+id/barchart1"
        android:layout_below="@+id/location"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="-150dp"
        android:layout_marginBottom="43dp"
        android:layout_toStartOf="@+id/pm2"
        android:background="@drawable/popup_curved"
        android:gravity="center"
        android:text="Humid"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="110dp"
        android:layout_toEndOf="@+id/location"
        android:text="TextView" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="219dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/popup_curved"
        android:gravity="center"
        android:text="Temperature"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/pm2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="212dp"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/popup_curved"
        android:gravity="center"
        android:text="pm2"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/pm10"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/barchart1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="212dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/popup_curved"
        android:gravity="center"
        android:text="pm10"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/weather"
        android:layout_width="105dp"
        android:layout_height="89dp"
        android:layout_below="@+id/location"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="250dp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart1"
        android:layout_width="390dp"
        android:layout_height="193dp"
        android:layout_above="@+id/linechart"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="34dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechart"
        android:layout_width="390dp"
        android:layout_height="193dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="41dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="127dp"
        android:text="Location"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/temperature"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="-105dp"
        android:freezesText="true"
        android:text="Temperature"
        android:textAlignment="center"
        android:textColor="#FFFDFD" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="9dp"
        android:layout_toStartOf="@+id/humid"
        android:freezesText="true"
        android:text="Humidty"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="191dp"
        android:text="Pm 2.5"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/barchart1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="41dp"
        android:text="Pm 10"
        android:textColor="#FFFFFF" />
</RelativeLayout>